ZSH=/usr/share/oh-my-zsh/
ZSH_CACHE_DIR=$HOME/.cache/oh-my-zsh
if [[ ! -d $ZSH_CACHE_DIR ]]; then
  mkdir $ZSH_CACHE_DIR
fi
plugins=(aws docker docker-compose fzf git nmap node npm rust sudo terraform)

source $ZSH/oh-my-zsh.sh
source ~/.cache/wal/colors.sh

path+=("$HOME/.ghcup/bin")
path+=("$HOME/.cargo/bin")
path+=("$HOME/.config/emacs/bin")
export PATH

export EDITOR=vim
export SHELL=zsh

HISTSIZE=5000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt hist_find_no_dups
setopt hist_ignore_all_dups
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_save_no_dups
setopt sharehistory

alias cat="bat"
alias cd="z"
alias l="eza -lh"
alias la="eza -lah"
alias ls="eza"
alias lt="eza -lah --tree"

alias cp="cp -v"
alias downgrade="sudo downgrade"
alias mkdir="mkdir -pv"
alias mv="mv -v"
alias pacman="sudo pacman"
alias rm="trash -v"

alias emacs="doom run"
alias ldocker="lazydocker"
alias lgit="lazygit"

alias sshnb="ssh luca@192.168.178.73"
alias sshpc="ssh luca@192.168.178.29"
alias sshpi="ssh pi@192.168.178.33"

eval "$(opam env)"
eval "$(rtx activate zsh)"
eval "$(starship init zsh)"
eval "$(zoxide init zsh)"

fastfetch
